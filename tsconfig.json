{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,

    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "srcServer/**/*",
    "srcClient/**/*"
  ],
  "exclude": [
    "node_modules"
   ]
}
