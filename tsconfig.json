{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true,

    "sourceMap": true,

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "jsx": "react",

    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
